class Solution:
    def getMinDiff(self, arr, k):
        n = len(arr)
        if n <= 1:
            return 0

        arr.sort()

        # Start with the "do nothing" option
        ans = arr[-1] - arr[0]

        for i in range(n - 1):
            small = min(arr[0] + k, arr[i + 1] - k)
            if small < 0:           # invalid split (would make a height negative)
                continue
            big = max(arr[i] + k, arr[-1] - k)
            ans = min(ans, big - small)

        return ans

ob = Solution()
print(ob.getMinDiff([1, 5, 8, 10], 2))      
print(ob.getMinDiff([3, 9, 12, 16, 20], 3))   
            
        
