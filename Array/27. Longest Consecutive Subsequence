class Solution:
    def longestConsecutive(self,arr):
        arr.sort()
        print(arr)
        n= len(arr)

        current = 1
        longest =1

        if not arr:
            return 0

        for i in range(0,n-1):
            if arr[i]+1 == arr[i+1]:
                current += 1

                longest = max(longest,current)

            elif arr[i] != arr[i+1]:
                current = 1

        return longest
            


ob = Solution()
