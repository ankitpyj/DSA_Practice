class Solution:
    def spirallyTraverse(self,mat):
        traverse_arr = []

        top = 0
        bottom = len(mat)-1
        left = 0
        right = len(mat[0]) - 1

        while top <= bottom and left <= right:

            # Traverse top row
            for i in range(left,right +1):
                traverse_arr.append(mat[top][i])
            top += 1

            # Traverse right column
            for j in range(top,bottom+1):
                traverse_arr.append(mat[j][right])
            right -= 1

            # Traverse bottom row
            if top <= bottom:
                for k in range(right,left-1,-1):
                    traverse_arr.append(mat[bottom][k])
                bottom -= 1

            # Traverse left row
            if left <= right :
                for l in range(bottom,top-1,-1):
                    traverse_arr.append(mat[l][left])
                left += 1
            
        return traverse_arr


ob = Solution()
